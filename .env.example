# NextAuth / GitHub OAuth
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_app_secret
NEXTAUTH_SECRET=your_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# Redis
REDIS_URL=rediss://default:password@host:port

# App config
CANVAS_WIDTH=1600
CANVAS_HEIGHT=1000
CANVAS_GRID=20
COOLDOWN_SECONDS=300

# Public (exposed to client) - overrides canvas size used by the frontend at build/runtime
NEXT_PUBLIC_CANVAS_WIDTH=1600
NEXT_PUBLIC_CANVAS_HEIGHT=1000
NEXT_PUBLIC_CANVAS_GRID=20

# Optional: server-side API key for admin/bot operations. Keep this secret.
BOT_API_KEY=change_me_to_a_strong_secret
